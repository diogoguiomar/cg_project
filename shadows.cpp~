#include "computer.h"
#include "shadows.h"

void displayShadows ()
{
	//glBindTexture(GL_TEXTURE_2D, texture[5]);
  	glBegin(GL_QUADS); 
  	// screen shadow
  	glColor4f(0.9, 0.9, 0.9, 1.0);
		glVertex3f( -0.9,  0.01, -0.8 ); // bot left
  		glVertex3f(  0.9,  0.01, -0.8 ); // bot right
  		glVertex3f(  0.9,  0.01, -1.8 ); // top right
  		glVertex3f( -0.9,  0.01, -1.8 ); // top left
	glEnd();
}
